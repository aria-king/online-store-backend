# ========================
# 🧪 Test Environment
# ========================
NODE_ENV=test
PORT=5050

# ========================
# 🧩 MongoDB (test database — isolated)
# ⚠️ توصیه: دیتابیس تست جدا از dev/prod باشد
# ========================
MONGO_URI=mongodb://127.0.0.1:27017/test_audit_db_temp

# ========================
# 🔐 JWT (simple for testing)
# ========================
JWT_SECRET=testSecretKey_12345

# ========================
# 📧 Email / SMS (mocked)
# هیچ ایمیل یا پیام واقعی ارسال نمی‌شود
# ========================
SMTP_HOST=mock
SMTP_PORT=1025
SMTP_USER=mock
SMTP_PASS=mock
KAVENEGAR_API_KEY=mock
SMS_TEMPLATE=mock

# ========================
# 👑 Default Super Admin (for test seeding)
# ========================
SUPER_ADMIN_EMAIL=test_admin@example.com
SUPER_ADMIN_PASS=123456

# ========================
# 🧠 Audit & Logging
# ========================
USE_AUDIT_QUEUE=false
AUDIT_LOG_EXPIRE_DAYS=7
LOG_LEVEL=debug

# ========================
# 💾 Backup / Upload Paths (temporary)
# ========================
BACKUP_PATH=./temp/backups
UPLOAD_PATH=./temp/uploads

# ========================
# 🚫 Schedulers disabled in test mode
# ========================
ENABLE_REMINDER_SCHEDULER=false
ENABLE_ANNOUNCEMENT_SCHEDULER=false

# ========================
# 🌐 Mock URLs
# ========================
SERVER_URL=http://localhost:5050
CLIENT_URL=http://localhost:3000
