{
  "name": "online-shop-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Advanced backend for Online Shop with Audit Trail, Role Management, and Service History",
  "main": "server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server.js",
   "start": "cross-env NODE_ENV=production NODE_OPTIONS=--enable-source-maps node --require ./utf8-setup.js server.js",

    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:auth": "cross-env NODE_ENV=test jest tests/auth --runInBand",
    "test:audit": "cross-env NODE_ENV=test node tests/testClientAuditFlow.js",
    "lint": "eslint . --ext .js",
    "seed:roles": "cross-env NODE_ENV=development node ./seeds/seedRoles.js",
    "clear:logs": "cross-env NODE_ENV=development node backend/scripts/clearAuditLogs.js"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.12.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.3.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.19.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "on-finished": "^2.4.1",
    "pdfkit": "^0.17.2",
    "slugify": "^1.6.6",
    "socket.io": "^4.8.1",
    "useragent": "^2.3.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^9.10.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "detectOpenHandles": true,
    "forceExit": true,
    "roots": [
      "<rootDir>/backend/tests"
    ]
  },
  "keywords": [
    "express",
    "mongoose",
    "audit",
    "role-management",
    "online-shop",
    "backend"
  ],
  "author": "Your Name",
  "license": "ISC"
}
